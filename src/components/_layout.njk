<!doctype html>
<html>
	<head>

		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<!-- CSS -->
		{% for style in styles %}
			<link rel="stylesheet" href="{{ root }}{{ style }}">
		{% endfor %}

		<!-- JS -->
		{% for script in scripts %}
			<script defer src="{{ root }}{{ script }}"></script>
		{% endfor %}

	</head>
	<body>

		{% block body %}{% endblock %}

	</body>
</html>