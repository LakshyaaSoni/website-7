<div class="hero section section--full">

	<div class="row middle-on-small">
		<div class="column medium-6 large-5">

			<h1 class="h1 c-white">{{ header | safe }}</h1>
			<p class="h3 c-light">{{ subheader }}</p>

			<div class="spacing-huge"></div>

			{% for item in buttons %}
				{% inject "assets/components/button/button.njk", item %}
			{% endfor %}

		</div>
		<div class="column hide-on-small show-on-medium medium-6 large-offset-1 large-6">

			<div class="shapes">
				<div class="square"></div>
				<div class="circle"></div>
			</div>

		</div>
	</div>

</div>