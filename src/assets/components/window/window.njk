<div class="window">
	<div class="window__toolbar">
		<div class="window__dots">
			<div class="window__dot window__dot--red"></div>
			<div class="window__dot window__dot--yellow"></div>
			<div class="window__dot window__dot--grey"></div>
		</div>
		<div class="window__address align-center">
			<p class="spacing-zero">{{ url }}</p>
		</div>
	</div>
	<div class="window__content">
		{% if figure %}
			<img class="window__image spacing-zero" src="{{ figure.src }}" width="{{ figure.width }}" height="{{ figure.height }}" alt="{{ figure.alternative }}">
		{% elseif bodytext %}
			{{ bodytext | safe }}
		{% endif %}
		{% for item in points %}
			{% inject "assets/components/point/point.njk", item %}
		{% endfor %}
	</div>
</div>