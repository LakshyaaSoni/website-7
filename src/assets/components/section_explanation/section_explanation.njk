<div class="section section--enclosed section--overflow" id="{{ id }}">

	<div class="row row--spacing">
		<div class="column medium-6 large-5">

			<h2 class="h1 c-black">{{ header | safe }}</h2>
			{% if subheader %}<p class="h3">{{ subheader }}</p>{% endif %}

			<div class="spacing-huge"></div>

			<div class="c-main f-notomono">{{ bodytext | safe }}</div>

		</div>
		<div class="column medium-6 large-offset-1 large-6">

			{% inject "assets/components/browser/browser.njk", browser %}

		</div>
	</div>

</div>